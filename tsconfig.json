{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020.string"],
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "outDir": "./dst"
  },
  "exclude": ["src/**/*.test.ts"]
}
